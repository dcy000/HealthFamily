<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="100pt"
        android:layout_height="100pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32pt"
        android:layout_marginLeft="32pt"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"
        android:textSize="36pt"
        android:textColor="@color/text_normal_color"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/civ_head"
        app:layout_constraintLeft_toRightOf="@id/civ_head"
        android:layout_marginLeft="24pt"/>
    <TextView
        android:id="@+id/tv_commit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交时间：2019.1.1"
        android:textColor="#999999"
        android:textSize="28pt"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="26pt"
        />
    <TextView
        android:id="@+id/tv_audit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="审核时间：2019.2.1"
        android:textSize="24pt"
        android:textColor="#999999"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_commit_time"
        android:layout_marginTop="16pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32pt"
        />
    <TextView
        android:layout_width="88pt"
        android:layout_height="56pt"
        android:textColor="@color/white"
        android:background="@drawable/selector_btn_blue"
        android:text="查看"
        android:textSize="28pt"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32pt"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="156pt"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="362pt"
        android:layout_marginTop="24pt"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tip_name"
            android:layout_width="wrap_content"
            android:layout_height="120pt"
            android:layout_marginLeft="32pt"
            android:gravity="center"
            android:text="手环IMEI码"
            android:textColor="#909399"
            android:textSize="32pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="32pt"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:textColorHint="#C0C4CC"
            android:textSize="32pt"
            app:layout_constraintBottom_toBottomOf="@id/tip_name"
            app:layout_constraintLeft_toRightOf="@id/tip_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tip_name" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_marginLeft="32pt"
            android:layout_marginRight="32pt"
            android:background="#DCDCDC"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tip_name" />

        <TextView
            android:id="@+id/tip_phone"
            android:layout_width="wrap_content"
            android:layout_height="120pt"
            android:layout_marginLeft="32pt"
            android:gravity="center"
            android:text="手环手机号"
            android:textColor="#909399"
            android:textSize="32pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1" />

        <TextView
            android:id="@+id/et_handring_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="32pt"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:textColorHint="#C0C4CC"
            android:textSize="32pt"
            app:layout_constraintBottom_toBottomOf="@id/tip_phone"
            app:layout_constraintLeft_toRightOf="@id/tip_phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tip_phone" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_marginLeft="32pt"
            android:layout_marginRight="32pt"
            android:background="#DCDCDC"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tip_phone" />

        <TextView
            android:id="@+id/tip_idcard"
            android:layout_width="wrap_content"
            android:layout_height="120pt"
            android:layout_marginLeft="32pt"
            android:gravity="center"
            android:text="身份证号"
            android:textColor="#909399"
            android:textSize="32pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <EditText
            android:id="@+id/et_idcard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="32pt"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入居民的身份证号"
            android:textColorHint="#C0C4CC"
            android:textSize="32pt"
            app:layout_constraintBottom_toBottomOf="@id/tip_idcard"
            app:layout_constraintLeft_toRightOf="@id/tip_idcard"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tip_idcard" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/btn_sure"
        android:layout_width="630pt"
        android:layout_height="88pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80pt"
        android:background="@drawable/selector_btn_gray"
        android:clickable="true"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="32pt" />
</LinearLayout>
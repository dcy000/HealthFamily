<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.10.23"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/text_normal_color"
        android:textSize="@dimen/text_normal_size"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="200pt"
        android:layout_height="124pt"
        android:background="@drawable/bg_shadow"
        app:layout_constraintLeft_toLeftOf="@id/tv_time"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24pt"
            android:layout_marginTop="24pt"
            android:text="高压"
            android:textColor="#909399"
            android:textSize="24pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_project_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#606265"
            android:textSize="40pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_title1"
            app:layout_constraintTop_toBottomOf="@id/tv_title1" />

        <TextView
            android:id="@+id/tv_unit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mmHg"
            android:textColor="#C0C4CC"
            android:textSize="24pt"
            app:layout_constraintBottom_toBottomOf="@id/tv_project_value1"
            app:layout_constraintLeft_toRightOf="@id/tv_project_value1"
            app:layout_constraintTop_toTopOf="@id/tv_project_value1" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="200pt"
        android:layout_height="124pt"
        android:background="@drawable/bg_shadow"
        app:layout_constraintLeft_toRightOf="@id/cl1"
        app:layout_constraintTop_toTopOf="@id/cl1">

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24pt"
            android:layout_marginTop="24pt"
            android:text="低压"
            android:textColor="#909399"
            android:textSize="24pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_project_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#606265"
            android:textSize="40pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_title2"
            app:layout_constraintTop_toBottomOf="@id/tv_title2" />

        <TextView
            android:id="@+id/tv_unit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mmHg"
            android:textColor="#C0C4CC"
            android:textSize="24pt"
            app:layout_constraintBottom_toBottomOf="@id/tv_project_value2"
            app:layout_constraintLeft_toRightOf="@id/tv_project_value2"
            app:layout_constraintTop_toTopOf="@id/tv_project_value2" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl3"
        android:layout_width="200pt"
        android:layout_height="124pt"
        android:background="@drawable/bg_shadow"
        app:layout_constraintLeft_toRightOf="@id/cl2"
        app:layout_constraintTop_toTopOf="@id/cl2">

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24pt"
            android:layout_marginTop="24pt"
            android:text="心率"
            android:textColor="#909399"
            android:textSize="24pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_project_value3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#606265"
            android:textSize="40pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_title3"
            app:layout_constraintTop_toBottomOf="@id/tv_title3" />

        <TextView
            android:id="@+id/tv_unit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次/分"
            android:textColor="#C0C4CC"
            android:textSize="24pt"
            app:layout_constraintBottom_toBottomOf="@id/tv_project_value3"
            app:layout_constraintLeft_toRightOf="@id/tv_project_value3"
            app:layout_constraintTop_toTopOf="@id/tv_project_value3" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
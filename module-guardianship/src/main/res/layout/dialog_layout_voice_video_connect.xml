<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="229pt"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog_corner_28">
        <TextView
            android:id="@+id/tv_video_connect"
            android:layout_width="match_parent"
            android:layout_height="114pt"
            android:text="视频通话"
            android:textColor="#007AFF"
            android:textSize="40pt"
            android:gravity="center"
            android:clickable="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/color_eeeeee"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"/>
        <TextView
            android:id="@+id/tv_voice_connect"
            android:layout_width="match_parent"
            android:layout_height="114pt"
            android:text="语音通话"
            android:textColor="#007AFF"
            android:textSize="40pt"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_cancel_connect"
        android:layout_width="match_parent"
        android:layout_height="114pt"
        android:background="@drawable/shape_dialog_corner_28_white"
        android:layout_marginTop="16pt"
        android:text="取消"
        android:textSize="40pt"
        android:textColor="#007AFF"
        android:gravity="center"
        android:layout_marginBottom="20pt"
        />

</LinearLayout>
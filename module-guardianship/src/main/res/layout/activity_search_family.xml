<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="17pt">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="600pt"
            android:layout_height="56pt"
            android:background="#F8F8F8"
            android:drawableLeft="@drawable/guardianship_ic_search"
            android:textSize="24pt"
            android:textColor="@color/text_normal_color"
            android:textColorHint="#C0C4CC"
            android:hint="请输入联系人手机号码"
            android:paddingLeft="24pt"
            android:drawablePadding="17pt"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#909399"
            android:textSize="28pt"
            android:paddingLeft="26pt"
            android:paddingRight="26pt"
            android:clickable="true"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
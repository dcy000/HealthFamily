<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_test"
        android:layout_width="530pt"
        android:layout_height="530pt"
        android:layout_marginTop="145pt"
        android:src="@drawable/guardianship_remote_test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始
检测"
        android:textColor="@color/white"
        android:textSize="60pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_test"
        app:layout_constraintLeft_toLeftOf="@id/iv_test"
        app:layout_constraintRight_toRightOf="@id/iv_test"
        app:layout_constraintTop_toTopOf="@id/iv_test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360pt"
        android:background="@drawable/shape_white_corner_bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:layout_marginLeft="56pt"
                android:src="@drawable/ic_blood_press_test" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24pt"
                android:text="血压"
                android:textColor="@color/text_normal_color"
                android:textSize="32pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:text="mmHg"
                android:textColor="@color/text_normal_color"
                android:textSize="24pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_blood_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="56pt"
                android:text="-/-"
                android:textColor="@color/text_normal_color"
                android:textSize="56pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:layout_marginLeft="56pt"
                android:src="@drawable/ic_heart_rate_test" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24pt"
                android:text="心率"
                android:textColor="@color/text_normal_color"
                android:textSize="32pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:text="次/分"
                android:textColor="@color/text_normal_color"
                android:textSize="24pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_heart_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/text_normal_color"
                android:textSize="56pt"
                android:textStyle="bold"
                android:layout_marginRight="56pt"/>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
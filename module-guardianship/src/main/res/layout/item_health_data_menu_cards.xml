<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200pt"
    android:layout_height="124pt"
    android:background="@drawable/bg_shadow">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24pt"
        android:layout_marginTop="24pt"
        android:text="运动"
        android:textColor="#909399"
        android:textSize="24pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_project_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8000"
        android:textColor="#606265"
        android:textSize="40pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="步"
        android:textColor="#C0C4CC"
        android:textSize="24pt"
        app:layout_constraintBottom_toBottomOf="@id/tv_project_value"
        app:layout_constraintLeft_toRightOf="@id/tv_project_value"
        app:layout_constraintTop_toTopOf="@id/tv_project_value" />
</android.support.constraint.ConstraintLayout>
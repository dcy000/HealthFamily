<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_head"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:layout_marginLeft="32pt"
        android:src="@drawable/icon_add_guardianship"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24pt"
        android:text="姓名"
        android:textColor="#333"
        android:textSize="36pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_address"
        app:layout_constraintLeft_toRightOf="@id/item_head"
        app:layout_constraintTop_toTopOf="@id/item_head" />

    <TextView
        android:id="@+id/item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        android:textColor="#909399"
        android:textSize="28pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/item_name"
        app:layout_constraintTop_toBottomOf="@id/item_name" />

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="70pt"
        android:layout_height="70pt"
        android:layout_marginRight="32pt"
        android:src="@drawable/icon_mobile_phone_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:padding="15pt"/>
</android.support.constraint.ConstraintLayout>
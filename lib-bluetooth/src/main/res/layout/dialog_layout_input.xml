<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入仪器背后的识别码"
        android:layout_marginTop="12pt"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/text_normal_color"/>
    <EditText
        android:id="@+id/et_input_content"
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:background="@drawable/shape_edittext_corner"
        android:layout_marginLeft="32pt"
        android:layout_marginRight="32pt"
        android:layout_marginTop="20pt"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="#e6e6e6"
        android:layout_marginTop="20pt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/text_normal_color"
            android:textSize="@dimen/text_normal_size"
            android:textStyle="bold"
            android:gravity="center"/>
        <View
            android:layout_width="2pt"
            android:layout_height="match_parent"
            android:background="#e6e6e6"/>
        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textStyle="bold"
            android:textSize="@dimen/text_normal_size"
            android:textColor="@color/text_normal_color"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="180pt"
        android:layout_height="180pt"
        android:layout_marginTop="116pt"
        android:src="@drawable/ic_login_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_login_username"
        android:layout_width="630pt"
        android:layout_height="100pt"
        android:layout_marginTop="80pt"
        android:hint="请输入用户名"
        android:padding="8pt"
        android:text=""
        android:textColor="@color/text_normal_color"
        android:textSize="@dimen/text_normal_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_login_logo" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="630pt"
        android:layout_height="100pt"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="8pt"
        android:text=""
        android:textColor="@color/text_normal_color"
        android:textSize="@dimen/text_normal_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_username" />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="630pt"
        android:layout_height="90pt"
        android:layout_marginTop="120pt"
        android:background="@drawable/selector_btn_blue"
        android:clickable="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_password" />

    <TextView
        android:id="@+id/tv_regist_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24pt"
        android:clickable="true"
        android:text="注册账号"
        android:textColor="#3F86FC"
        android:textSize="28pt"
        app:layout_constraintLeft_toLeftOf="@id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/btn_login" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24pt"
        android:clickable="true"
        android:text="忘记密码"
        android:textColor="#909399"
        android:textSize="28pt"
        app:layout_constraintRight_toRightOf="@id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/btn_login" />


    <TextView
        android:id="@+id/btn_change_face_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64pt"
        android:text="切换人脸登录"
        android:textColor="#3F86FC"
        android:textSize="32pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
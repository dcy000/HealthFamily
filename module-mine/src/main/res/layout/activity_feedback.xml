<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="384pt"
        android:background="@color/white"
        android:gravity="start"
        android:hint="亲，我们非常重视您给我们提出的宝贵建议，帮助我们不断完善产品，谢谢"
        android:paddingLeft="32pt"
        android:paddingTop="22pt"
        android:paddingRight="32pt"
        android:paddingBottom="22pt"
        android:textColor="@color/text_normal_color"
        android:textSize="@dimen/text_normal_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24pt"/>

    <TextView
        android:id="@+id/tv_content_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20pt"
        android:gravity="right"
        android:maxLength="200"
        android:text="0/200"
        android:textColor="#C0C4CC"
        android:textSize="24pt"
        app:layout_constraintBottom_toBottomOf="@id/et_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32pt"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/et_content"
        android:layout_marginTop="24pt"
        android:gravity="start|center_vertical"
        android:hint="填写您的手机或邮箱"
        android:paddingLeft="32pt"
        android:paddingTop="22pt"
        android:paddingRight="32pt"
        android:paddingBottom="22pt"
        android:textColor="@color/text_normal_color"
        android:textSize="@dimen/text_normal_size"
        />

</android.support.constraint.ConstraintLayout>